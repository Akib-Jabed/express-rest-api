{
  "extends": ["prettier", "airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-console": 0,
    "indent": 0,
    "linebreak-style": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 125,
        "tabWidth": 4,
        "semi": true
      }
    ],
    "import/extensions": [
      {
        "js": "always"
      }
    ],
    "no-underscore-dangle": [
      "error",
      { "allow": ["_id", "__filename", "__dirname"] }
    ],
    "no-unused-vars": ["error", { "args": "none" }],
    "comma-dangle": [
      "error",
      {
        "arrays": "only-multiline",
        "objects": "only-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "func-names": "off",
    "consistent-return": "off"
  },
  "plugins": ["prettier"]
}
